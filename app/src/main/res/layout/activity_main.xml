<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/_ori_gray"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/_ori_status_color"
        android:text="在线设备"
        android:textColor="@color/_ori_white"
        android:shadowColor="@color/_ori_red"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:textSize="18sp"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/act_main_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@color/_ori_white"
        android:elevation="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="2dp"
            style="@style/_ori_botton_b"
            android:textSize="16sp"
            android:gravity="center"
            android:text="链接重置"/>

        <View
            android:id="@+id/testRe"
            android:layout_width="20dp"
            android:layout_weight="0.5"
            android:background="@color/_ori_yellow"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="2dp"
            style="@style/_ori_botton_b"
            android:textSize="16sp"
            android:gravity="center"
            android:text="重注册"/>
    </LinearLayout>
</LinearLayout>